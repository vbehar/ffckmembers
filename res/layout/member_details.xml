<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:scrollbars="none">
    <TableLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:padding="10sp">
        <TableRow
            android:gravity="center"
            android:layout_marginBottom="10sp">
            <TextView
                android:id="@+id/member_details_first_name"
                android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_marginRight="10sp" />
            <TextView
                android:id="@+id/member_details_last_name"
                android:textAppearance="?android:attr/textAppearanceLarge" />
        </TableRow>
        <TableRow>
            <TextView
                android:id="@+id/member_details_gender" />
            <TextView
                android:id="@+id/member_details_birth_date" />
        </TableRow>
        <TableRow>
            <TextView
                android:id="@+id/member_details_phone_mobile" />
            <TextView
                android:id="@+id/member_details_phone_mobile_2" />
        </TableRow>
        <TableRow>
            <TextView
                android:id="@+id/member_details_phone_home" />
            <TextView
                android:id="@+id/member_details_phone_other" />
        </TableRow>
        <TableRow>
            <TextView
                android:id="@+id/member_details_email" />
            <TextView
                android:id="@+id/member_details_email_2" />
        </TableRow>
        <TableRow>
            <TextView
                android:id="@+id/member_details_address" />
        </TableRow>
        <TableRow>
            <TextView
                android:id="@+id/member_details_postal_code" />
            <TextView
                android:id="@+id/member_details_city" />
        </TableRow>
        <TableRow>
            <TextView
                android:id="@+id/member_details_code" />
            <TextView
                android:id="@+id/member_details_last_license" />
        </TableRow>
    </TableLayout>
</ScrollView>
